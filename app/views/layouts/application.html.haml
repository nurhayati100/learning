!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Learning RubyonRails.com"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"


  %body
    .navbar.navbar-inverse
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{href: lists_path} Learning RubyonRails
          .container.nav-collapse
            %ul.nav
              %li= link_to "About", about_path
              %li= link_to "List Articel", lists_path
              %li= link_to "Ask", posts_path


    .container

      .row
        .span9
          = bootstrap_flash
          = yield

        .span3
          .well.sidebar-nav
            %h3 Login Section
            %ul.nav.nav-list
              - if member_signed_in?
                %li= link_to "Edit Profile", edit_member_registration_path, :method => :get
                %li= link_to "Sign out", destroy_member_session_path, :method => :delete
              - else
                %li= link_to "Sign In", new_member_session_path, :method => :get
                %li= link_to "Sign up", new_member_registration_path, :method => :get

        .span3
          .well.sidebar-nav
            %h3 Page Member
            %ul.nav.nav-list
              - if member_signed_in?
                %li= link_to "New Articel", new_list_path
                %li= link_to "New Ask", new_post_path

              - else
                %li= link_to "Loream lipsum", '#'
                %li= link_to "Loream lipsum", '#'
                %li= link_to "Loream lipsum", '#'
                %li= link_to "Loream lipsum", '#'
                %li= link_to "Loream lipsum", '#'



  .footer
    %span
      copyright 2014 By Creative
      %a{:href => "https://twitter.com/noer180895", :target => "_blank"} Nurhayati



