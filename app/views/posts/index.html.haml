.page-header
  %h1
    List Ask
- if member_signed_in?
  = link_to 'New Post', new_post_path, :class => "btn btn-primary"
- else
  %span.post= "**Susah belajar ror? Bingung yah? solusinya? Lets Join now guys to ask your trouble in here** >>"
  = link_to 'Register', new_member_registration_path
%br
#articel
  - @posts.each do |post|
    %br
    .isi
      %h1= post.title
      %span.text= truncate post.text, length: 1000
      %br
      %span= link_to 'Show', post, :class => 'btn btn-primary'
      - if member_signed_in?
        %span.link= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger'
