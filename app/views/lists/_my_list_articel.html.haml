.page-header
  %h1
    List My Articel
- if member_signed_in?
  = link_to 'New List', new_list_path, :class => "btn btn-primary"
- else
  %span.post= "**Mau Posting artikel mu disini? Lets Join now guys** >>"
  = link_to 'Register', new_member_registration_path
#articel
  - @mylist.each do |my|
    %br
    .isi
      %h1= my.title
      %span.text= truncate my.body, length: 1000
      %br
      %br
      %span.text= link_to "Download Articel", my.attachment_url
      %br
      %br
      %span= link_to 'Show', list_path(my), :class => 'btn btn-primary'
      - if member_signed_in?
        %span= link_to 'Edit', edit_list_path(my), :class => 'btn btn-inverse'
        %span= link_to 'Destroy', list_path(my), method: :delete, data: {confirm: 'Are You sure?'}, :class => 'btn btn-danger'



