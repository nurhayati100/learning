.page-header
  %h1
    List Articel
- if member_signed_in?
  = link_to 'New List', new_list_path, :class => "btn btn-primary"
- else
  %span.post= "**Mau Posting artikel mu disini? Lets Join now guys** >>"
  = link_to 'Register', new_member_registration_path
#articel
  - @lists.each do |list|
    %br
    .isi
      %h1= list.title
      %span.text= truncate list.body, length: 1000
      %br
      %br
      %span.text= link_to "Download Articel", list.attachment_url
      %br
      %br
      %span= link_to 'Show', list, :class => 'btn btn-primary'
      - if member_signed_in?
        %span= link_to 'Edit', edit_list_path(list), :class => 'btn btn-inverse'
        %span= link_to 'Destroy', list_path(list), method: :delete, data: {confirm: 'Are You sure?'}, :class => 'btn btn-danger'



